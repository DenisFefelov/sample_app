<% provide(:title, @user.name) %>
<div id="row">
  <div id="user_info">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </div>
  <div id="posts">
  	<%= render 'follow_form' if signed_in? %>
  	<h3>Microposts (<%= @user.microposts.count %>)</h3>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>